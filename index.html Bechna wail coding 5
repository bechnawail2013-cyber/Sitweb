        // Corriger automatiquement le code
        function autoCorrectCode(code) {
            let corrections = [];
            let correctedCode = code;
            
            // DÃ©tecter et corriger les erreurs courantes
            if (code.includes('prit(') || code.includes('pritn(')) {
                correctedCode = correctedCode.replace(/prit(?:n)?\(/g, 'print(');
                corrections.push('"prit" ou "pritn" corrigÃ© en "print"');
            }
            
            if (code.includes('repeet') || code.includes('repete')) {
                correctedCode = correctedCode.replace(/repeet|repete/g, 'repeat');
                corrections.push('"repeet" ou "repete" corrigÃ© en "repeat"');
            }
            
            if (code.includes('repet')) {
                correctedCode = correctedCode.replace(/repet/g, 'repeat');
                corrections.push('"repet" corrigÃ© en "repeat"');
            }
            
            // VÃ©rifier les guillemets non fermÃ©s
            const quoteCount = (code.match(/"/g) || []).length;
            if (quoteCount % 2 !== 0) {
                correctedCode += '"';
                corrections.push('Guillemet fermant ajoutÃ©');
            }
            
            return {
                corrected: correctedCode,
                corrections: corrections
            };
        }
        
        // ExÃ©cuter le code
        function executeCode(code) {
            // Corriger le code automatiquement
            const correction = autoCorrectCode(code);
            
            // Afficher les corrections si nÃ©cessaire
            if (correction.corrections.length > 0) {
                correctionMessage.style.display = 'block';
                correctionDetails.innerHTML = correction.corrections.map(c => `â€¢ ${c}`).join('<br>');
                
                // Mettre Ã  jour l'Ã©diteur avec le code corrigÃ©
                codeEditor.value = correction.corrected;
            } else {
                correctionMessage.style.display = 'none';
            }
            
            // Simuler l'exÃ©cution du code
            const lines = correction.corrected.split('\n');
            let output = '';
            let repeatCount = 1;
            
            lines.forEach(line => {
                // DÃ©tecter les commandes print
                const printMatch = line.match(/print\("([^"]+)"\)/);
                if (printMatch) {
                    const text = printMatch[1];
                    
                    // DÃ©tecter les rÃ©pÃ©titions
                    const repeatMatch = line.match(/repeat\s+(\d+)/);
                    if (repeatMatch) {
                        repeatCount = parseInt(repeatMatch[1]);
                    }
                    
                    for (let i = 0; i < repeatCount; i++) {
                        output += text + '\n';
                    }
                }
                
                // DÃ©tecter les commentaires
                if (line.includes('#') && !output.includes(line.trim())) {
                    output += line.trim() + '\n';
                }
            });
            
            // Ajouter un message personnalisÃ© si l'utilisateur est connectÃ©
            if (currentUser) {
                output += `\n---\nCode exÃ©cutÃ© par ${currentUser.name} depuis ${currentUser.flag} ${currentUser.country}\n`;
                output += `Langage: Bechna Wail Coding 5 (${currentLanguage === 'english' ? 'Version Anglais' : 'Version Arabe'})\n`;
            }
            
            return output || 'Aucun rÃ©sultat Ã  afficher. Essayez: print("Hello") repeat 3';
        }
        
